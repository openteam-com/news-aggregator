<%= link_to 'Удалить', manage_city_path(@city), :method => :delete, :confirm => 'Удалить?' unless @city.new_record? %>

<%= simple_form_for [:manage, @city] do |f| %>
  <%= f.input :title %>
  <%= f.input :slug %>
  <%= f.input :meta_title %>
  <%= f.input :meta_keywords %>
  <%= f.input :meta_description %>
  <%= f.submit 'Сохранить' %>
<% end %>
